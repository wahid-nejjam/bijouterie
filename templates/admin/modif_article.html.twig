{% extends 'backoffice.html.twig' %}
{% block title %}
    {{ parent() }}Modif article
{% endblock %}
{% block titre %}
    Modification Article
{% endblock %}



{% block body %}
    <div class="container">
        <div class="row justify-content-center mb-5">

            <div class="col-md-6">
                {{ form_start(formu) }}
                <div>
                    <label for="">Nom</label>
                    {{ form_row(formu.nom) }}
                </div>
                <div>
                    <label for="">Prix</label>
                    {{ form_row(formu.prix) }}
                </div>
                <div>
                    <label for="">Référence</label>
                    {{ form_row(formu.ref) }}
                </div>
                <div>
                    <label for="">Description</label>
                    {{ form_row(formu.description) }}
                </div>
                <div>
                    <label for="">Photo</label>
                    {{ form_row(formu.photoModif, {"attr": {"onChange": "loadFile(event)"}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            <label for="">Photo actuelle</label>
                            <img width="300" src="{{ asset('photos/') }}{{ article.photo }}" alt="">
                        </div>
                        <div class="col-md-6 text-center">
                            <label for="">Nouvelle photo</label>
                            <img id="image" style='width:300px'>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    {{ form_row(formu.Valider) }}
                </div>
                {{ form_end(formu) }}
            </div>
        </div>
    </div>

    <script>
        var loadFile = function (event) {
            var image = document.getElementById('image');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>



{% endblock %}



