{% extends 'backoffice.html.twig' %}
{% block title %}
    {{ parent() }}Ajout article
{% endblock %}
{% block titre %}
    Ajout Article
{% endblock %}



{% block body %}
    <div class="container">
        <div class="row justify-content-center mb-5">

            <div class="col-md-6">
                {{ form_start(formu) }}
                <div >
                    <label for="">Nom</label>
                    {{ form_row(formu.nom) }}
                </div>
                <div >
                    <label for="">Prix</label>
                    {{ form_row(formu.prix) }}
                </div>
                <div >
                    <label for="">Référence</label>
                    {{ form_row(formu.ref) }}
                </div>
                <div >
                    <label for="">Description</label>
                    {{ form_row(formu.description) }}
                </div>
                <div >
                    <label for="">Catégorie</label>
                    {{ form_row(formu.categorie) }}
                </div>
                <div >
                    <label for="">Photo</label>
                    {{ form_row(formu.photo, { 'attr':{"onChange":"loadFile(event)"} }) }}
                    <div class="col-md-12 text-center">

                        <img id="image" style='width:300px'>

                    </div>

                </div>
                <div class="mt-4">
                    {{ form_row(formu.Valider) }}
                </div>
                {{ form_end(formu) }}
            </div>
        </div>
    </div>
    <script>

        var loadFile = function(event){
            var image = document.getElementById('image');

            image.src = URL.createObjectURL(event.target.files[0]);
        };

    </script>



{% endblock %}



